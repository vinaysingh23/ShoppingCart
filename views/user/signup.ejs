<!DOCTYPE html>
<html>
<div align="center" >
	<div align="center">
		<h1> Sign Up</h1>
		<% if(hasErrors){%>
			<ul>
			<% messages.forEach(function(error){ %>
				<li><%=error %> </li>
			<% }) ;%>
			</ul>
		<%} %>
		<!-- <% if(errors){%>
			<ul>
			<% errors.forEach(function(error){ %>
				<li><%=error.msg %> </li>
			<% }) ;%>
			</ul>
		<%} %> -->
		
		<form method="POST" action= "/user/signup">
		<div>
			<label for="name">Full Name</label><br>
			<input type="text" id="name" name="name" </input>
		</div>
		<div>
			<label for="type">type</label><br>
			<input type="text" id="type" name="type" placeholder="user/seller" </input>
		</div>
		<div>
			<label for="email">Email</label><br>
			<input type="text" id="email" name="email" </input>
		</div>
		<div>
			<label for="password">Password</label><br>
			<input type="password" id="password" name="password" </input>
		</div>
		<div>
			<label for="confirm_password">ConfirmPassword</label><br>
			<input type="password" id="confirm_password" name="confirm_password" </input>
		<div>
			<input type="hidden" name="_csrf" value="<%= csrfToken %>"><br>
			<button type="submit">Sign Up </button>

		</form>
	</div>
</div>

</html>