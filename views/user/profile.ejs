<!DOCTYPE html>
<html>
<div align="center">
	<div class="col">
		<h1>Welcome <%=userDetails.name%> To Your Profile!!!</h1>
		<hr>
			<% if(type==='user') {%>
			<h2>Your Orders</h2>
				<%if(orders) {%>
					<% orders.forEach(function(order){ %>
					   <% order.items.forEach(function(item){ %>
